<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.lindell.app.hinkpink.GameDetailActivity"
android:weightSum="1"
android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hink Pink"
        android:id="@+id/textViewSyllables"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewHint"
        android:layout_gravity="center_horizontal"
        android:text="Hint" />



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/hintsLayout"
            android:layout_height="wrap_content">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="133dp"
                android:id="@+id/listViewHints" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Guesses"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/guessLayout"
            android:layout_height="wrap_content">
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="142dp"
                android:id="@+id/listViewGuesses" />
        </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:rowCount="7"
        android:columnCount="14"
        android:orientation="horizontal"
        android:id="@+id/gameGridLayout">

        <EditText
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="Submit"
            android:id="@+id/submitButton"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Refresh"
            android:id="@+id/refreshButton"
            android:layout_row="6"
            android:layout_column="0" />
    </GridLayout>

</LinearLayout>