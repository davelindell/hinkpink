<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.lindell.app.hinkpink.GameDetailActivity"
android:weightSum="1"
android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hink Pink"
        android:id="@+id/textViewSyllables"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewHint"
        android:layout_gravity="center_horizontal"
        android:text="Hint" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewHints"
        android:layout_weight="0.88"
        android:fillViewport="false" >

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewHints" />
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:id="@+id/scrollViewGuesses"
        android:fillViewport="false" >

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewGuesses" />
    </ScrollView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:rowCount="1"
        android:columnCount="3"
        android:orientation="horizontal"
        android:id="@+id/gameGridLayout"></GridLayout>

</LinearLayout>